<% layout("/layouts/boilerplate") %>

  <style>
    body {
      background: #f7f8fc;
    }

    .page-wrapper {
      padding: 1.5rem 0 2.5rem 0;
    }

    /* ================= FILTER BAR ================= */
    .filter-bar {
      background: white;
      padding: 1.2rem 1.5rem;
      border-radius: 22px;
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 2rem;
      margin-bottom: 2.3rem;
      flex-wrap: nowrap;
    }

    /* SCROLLABLE ICON ROW */
    .filters {
      display: flex;
      gap: 1.2rem;
      align-items: center;
      flex-wrap: nowrap;
      overflow-x: auto;
      white-space: nowrap;
      padding-bottom: .6rem;
      scroll-behavior: smooth;
    }

    /* SCROLLBAR STYLE (Chrome, Edge, Brave, Safari) */
    .filters::-webkit-scrollbar {
      height: 6px;
    }

    .filters::-webkit-scrollbar-track {
      background: #f1f1f1;
      border-radius: 10px;
    }

    .filters::-webkit-scrollbar-thumb {
      background: #4f46e5;
      border-radius: 10px;
    }

    .filters::-webkit-scrollbar-thumb:hover {
      background: #3730a3;
    }

    /* FILTER ICON */
    .filter {
      min-width: 74px;
      height: 74px;
      border-radius: 50%;
      background: #f4f6fb;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      font-size: .75rem;
      cursor: pointer;
      transition: .25s;
      box-shadow: inset 0 0 0 1px #e5e7eb;
      flex-shrink: 0;
    }

    .filter i {
      font-size: 1.25rem;
      margin-bottom: 6px;
    }

    .filter:hover {
      transform: translateY(-3px);
      background: #eef2ff;
    }

    .filter.active {
      background: #4f46e5;
      color: white;
    }

    /* ============= TAX TOGGLE ============= */
    .tax-toggle-container {
      background: #f8fafc;
      padding: 0.7rem 1rem;
      border-radius: 999px;
      display: flex;
      align-items: center;
      gap: 1rem;
      min-width: 260px;
      box-shadow: inset 0 0 0 1px #e5e7eb;
      flex-shrink: 0;
    }

    .tax-label {
      font-size: .85rem;
      font-weight: 500;
    }

    .tax-switch {
      position: relative;
      width: 48px;
      height: 24px;
    }

    .tax-switch input {
      display: none;
    }

    .slider {
      position: absolute;
      inset: 0;
      background: #d1d5db;
      border-radius: 20px;
      cursor: pointer;
      transition: .4s;
    }

    .slider:before {
      content: "";
      position: absolute;
      height: 18px;
      width: 18px;
      left: 3px;
      top: 3px;
      background: white;
      border-radius: 50%;
      transition: .4s;
    }

    .tax-switch input:checked+.slider {
      background: #4f46e5;
    }

    .tax-switch input:checked+.slider:before {
      transform: translateX(24px);
    }

    /* ============= LISTINGS ============= */
    .listing-link {
      text-decoration: none;
      color: inherit;
    }

    .listing-card {
      border-radius: 20px !important;
      overflow: hidden;
      border: none;
      box-shadow: 0 20px 45px rgba(0, 0, 0, 0.15);
      transition: .3s;
    }

    .listing-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 30px 60px rgba(0, 0, 0, .25);
    }

    .listing-card img {
      height: 16rem;
      object-fit: cover;
    }

    .listing-title {
      font-weight: 600;
      font-size: 1rem;
    }

    .listing-location {
      font-size: 0.82rem;
      color: gray;
    }

    .listing-chip {
      background: #eef2ff;
      color: #4f46e5;
      padding: 2px 10px;
      border-radius: 999px;
      font-size: .65rem;
      margin-left: 6px;
    }

    .tax-info {
      display: none;
      font-size: .8rem;
      color: gray;
    }

    .empty-state {
      display: none;
      text-align: center;
      padding: 3.4rem 1rem;
      color: #6b7280;
    }

    /* ================= CHATBOT ================= */
    .chatbot-container {
      position: fixed;
      bottom: 25px;
      right: 25px;
      z-index: 10000;
    }

    #chatbot-toggle {
      width: 60px;
      height: 60px;
      background: #4f46e5;
      border-radius: 50%;
      color: white;
      display: grid;
      place-items: center;
      font-size: 1.6rem;
      cursor: pointer;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
    }

    .chatbot-box {
      width: 360px;
      height: 480px;
      background: white;
      border-radius: 22px;
      display: none;
      flex-direction: column;
      overflow: hidden;
      box-shadow: 0 25px 60px rgba(0, 0, 0, .3);
      margin-bottom: 15px;
    }

    .chatbot-header {
      background: #4f46e5;
      color: white;
      padding: 14px 18px;
      display: flex;
      justify-content: space-between;
      font-weight: 600;
    }

    .chatbot-messages {
      flex: 1;
      padding: 15px;
      background: #f9fafb;
      overflow-y: auto;
    }

    .bot-msg,
    .user-msg {
      max-width: 80%;
      padding: 10px 14px;
      border-radius: 16px;
      margin-bottom: 10px;
      font-size: .85rem;
    }

    .bot-msg {
      background: #eef2ff;
    }

    .user-msg {
      background: #4f46e5;
      color: white;
      margin-left: auto;
    }

    .typing {
      font-style: italic;
      color: #6b7280;
    }

    .chatbot-input-area {
      display: flex;
      border-top: 1px solid #e5e7eb;
    }

    .chatbot-input-area input {
      flex: 1;
      border: none;
      padding: 12px;
      outline: none;
    }

    .chatbot-input-area button {
      background: #4f46e5;
      color: white;
      border: none;
      padding: 0 18px;
    }
  </style>

