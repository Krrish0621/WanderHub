<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">

    <div class="col-lg-8">
      <h3 class="mb-4 fw-semibold text-center">Edit Listing</h3>

      <div class="card p-4 shadow-sm rounded-4">

        <form 
          action="/listings/<%= listing._id %>?_method=PUT" 
          method="POST" 
          enctype="multipart/form-data"
          class="needs-validation"
          novalidate
        >

          <!-- TITLE -->
          <div class="mb-3">
            <label class="form-label fw-medium">Title</label>
            <input 
              type="text" 
              name="listing[title]" 
              class="form-control rounded-pill" 
              value="<%= listing.title %>" 
              required
            >
            <div class="invalid-feedback">Title is required.</div>
          </div>

          <!-- DESCRIPTION -->
          <div class="mb-3">
            <label class="form-label fw-medium">Description</label>
            <textarea 
              name="listing[description]" 
              class="form-control rounded-4" 
              rows="4"
              required
            ><%= listing.description %></textarea>
            <div class="invalid-feedback">Description is required.</div>
          </div>

          <!-- ORIGINAL IMAGE -->
          <div class="mb-3">
            <label class="form-label fw-medium">Current Image</label><br>
            <img 
              src="<%= originalImageUrl %>" 
              class="img-thumbnail mb-3 rounded-4"
              style="width: 100%; max-height: 280px; object-fit: cover;"
            >
          </div>

          <!-- NEW IMAGE -->
          <div class="mb-3">
            <label class="form-label fw-medium">Upload New Image</label>
            <input 
              type="file" 
              name="listing[image]" 
              class="form-control rounded-pill"
            >
          </div>

          <!-- PRICE -->
          <div class="mb-3">
            <label class="form-label fw-medium">Price (â‚¹)</label>
            <input 
              type="number" 
              name="listing[price]" 
              class="form-control rounded-pill" 
              value="<%= listing.price %>" 
              required
            >
            <div class="invalid-feedback">Price is required.</div>
          </div>

          <!-- LOCATION + COUNTRY -->
          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label fw-medium">Location</label>
              <input 
                type="text" 
                name="listing[location]" 
                class="form-control rounded-pill" 
                value="<%= listing.location %>" 
                required
              >
            </div>

            <div class="col-md-6 mb-3">
              <label class="form-label fw-medium">Country</label>
              <input 
                type="text" 
                name="listing[country]" 
                class="form-control rounded-pill" 
                value="<%= listing.country %>" 
                required
              >
            </div>
          </div>

          <button type="submit" class="btn edit-btn w-100 rounded-pill mt-3 py-2">
            Save Changes
          </button>

        </form>
      </div>
    </div>

  </div>
</div>
